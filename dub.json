{
	"name": "xlsxd",
	"authors": [
		"Robert Schadek"
	],
	"description": "A thin wrapper around libxlsx to write excel spreadsheets",
	"copyright": "Symmetry Investments",
	"license": "BSD",
	"preGenerateCommands" : ["make -C $PACKAGE_DIR", "make -C $PACKAGE_DIR buildclib"],
